<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/order_Detail_item_orderType"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="end"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="即时用车"
        android:textColor="@color/red"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/darkgray_lucency_8" />

        <LinearLayout
            style="@style/order_detail_item_layout_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 用户名称 -->

            <TextView
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/activity_order_detail_item_name" />

            <TextView
                android:id="@+id/order_Detail_item_name"
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小猫停车" />
        </LinearLayout>

        <LinearLayout
            style="@style/order_detail_item_layout_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 联系电话 -->

            <TextView
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/activity_order_detail_item_tel" />

            <TextView
                android:id="@+id/order_Detail_item_tel"
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="110" />
        </LinearLayout>

        <LinearLayout
            style="@style/order_detail_item_layout_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 用户类型 -->

            <TextView
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/activity_order_detail_item_useType" />

            <TextView
                android:id="@+id/order_Detail_item_useType"
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="政企用户" />
        </LinearLayout>

        <LinearLayout
            style="@style/order_detail_item_layout_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 用车时间 -->

            <TextView
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/activity_order_detail_item_useTime" />

            <TextView
                android:id="@+id/order_Detail_item_useTime"
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-10-31  11:11:11" />
        </LinearLayout>

        <LinearLayout
            style="@style/order_detail_item_layout_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 订单时间 -->

            <TextView
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/activity_order_detail_item_orderTime" />

            <TextView
                android:id="@+id/order_Detail_item_orderTime"
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-10-31  11:11:11" />
        </LinearLayout>

        <LinearLayout
            style="@style/order_detail_item_layout_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 订单号码 -->

            <TextView
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/activity_order_detail_item_orderNum" />

            <TextView
                android:id="@+id/order_Detail_item_orderNum"
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20161031111111" />
        </LinearLayout>

        <LinearLayout
            style="@style/order_detail_item_layout_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 用车人数 -->

            <TextView
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/activity_order_detail_item_personNum" />

            <TextView
                android:id="@+id/order_Detail_item_personNum"
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2" />
        </LinearLayout>

        <LinearLayout
            style="@style/order_detail_item_layout_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 起始位置 -->

            <TextView
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/activity_order_detail_item_startLoc" />

            <TextView
                android:id="@+id/order_Detail_item_startLoc"
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深圳市宝安区宝源路劳动村2对22巷2号楼2楼222室" />
        </LinearLayout>

        <LinearLayout
            style="@style/order_detail_item_layout_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!-- 终止位置 -->

            <TextView
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="@string/activity_order_detail_item_endLoc" />

            <TextView
                android:id="@+id/order_Detail_item_endLoc"
                style="@style/order_detail_item_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="深圳市南山区软件产业基地5栋E座4楼406小猫设备支付" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/order_Detail_item_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="距离:未知"
                android:textColor="@color/red"
                android:textSize="10sp" />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_Detail_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="时长:未知"
                android:textColor="@color/red"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/darkgray_lucency_8" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp" >

        <TextView
            android:id="@+id/line"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/darkgray_lucency_8" />

        <LinearLayout
            android:id="@+id/order_detail_position"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/line"
            android:layout_toStartOf="@+id/line"
            android:orientation="horizontal" >

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/order_position_detail" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="位置详情" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/order_Detail_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/line"
            android:layout_toRightOf="@+id/line"
            android:orientation="horizontal" >

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:scaleType="center"
                android:src="@drawable/order_detail_phone" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="电话" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/darkgray_lucency_4" />
    </RelativeLayout>

</LinearLayout>