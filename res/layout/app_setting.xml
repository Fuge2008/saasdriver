<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:saasuser="http://schemas.android.com/apk/res/com.example.saascardriver"
    android:id="@+id/layout_app_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <com.small.saasdriver.view.BaseTitleView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        saasuser:saasusertitle="App设置" />

    <TextView
        android:id="@+id/software_upgrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/softwareupdate"
        android:drawablePadding="10dip"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="16dip"
        android:paddingTop="10dip"
        android:text="@string/software_upgrade"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />

    <TextView
        android:id="@+id/password_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/passwordmodify"
        android:drawablePadding="10dip"
        android:drawableRight="@drawable/ic_arrow"
        android:paddingBottom="10dip"
        android:paddingLeft="10dip"
        android:paddingRight="16dip"
        android:paddingTop="10dip"
        android:text="@string/password_change"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e3e3" />

</LinearLayout>